@model IEnumerable<ToDoApp.Models.Tasks>

@{
	ViewData["Title"] = "Index";
}

<h1 class="d-flex justify-content-center">To-Do App</h1>
<h3>Add New Task</h3>
<form action="@Url.Action("Create","Task")" method="post" class="row">
	<div class="form-group col">
		<label class="control-label">Title</label>
		<input class="form-control" type="text" id="Title" name="Title"/>
	</div>
	<div class="form-group col">
		<label class="control-label">Description</label>
		<input class="form-control" type="text" id="Description" name="Description" />
	</div>				  
	<div class="form-group col d-flex align-items-end">
		<input type="submit" value="Add" class="btn btn-primary" />
	</div>
</form>
<hr />
<h3>Tasks</h3>
<table class="table">
	<thead>
		<tr>
			<th style="display:none">
				@Html.DisplayNameFor(model => model.Id)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Title)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Description)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IsCompleted)
			</th>
			<th>
				Action
			</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td style="display:none">
					@Html.DisplayFor(modelItem => item.Id)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Description)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IsCompleted)
				</td>
				<td>
					<a href="@Url.Action("Edit", "Task", new { id = item.Id })" class="btn btn-outline-none">
						<i class="fa-solid fa-pencil"></i>
					</a>
					<form action="@Url.Action("EditTask", "Task")" method="post" style="display:inline;">
						<input type="hidden" name="id" value="@item.Id" />
						<button type="submit" class="btn btn-outline-none"><i class="fa-solid fa-circle-check"></i></button>
					</form>
					<form action="@Url.Action("Delete", "Task")" method="post" style="display:inline;">
						<input type="hidden" name="id" value="@item.Id" />
						<button type="submit" class="btn btn-outline-none"><i class="fa-solid fa-trash"></i></button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
